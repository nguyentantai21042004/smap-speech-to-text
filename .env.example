# Application Settings
APP_NAME=SMAP Speech-to-Text
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# API Service
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4
MAX_UPLOAD_SIZE_MB=500

# MongoDB Settings (Primary Database)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=stt_system
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# RabbitMQ Settings (Message Queue)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_QUEUE_NAME=stt_jobs_queue
RABBITMQ_EXCHANGE_NAME=stt_exchange
RABBITMQ_ROUTING_KEY=stt.job

# MinIO (Object Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=stt-audio-files
MINIO_USE_SSL=False

# Storage (Temporary Processing)
TEMP_DIR=/tmp/stt_processing

# Whisper Settings
WHISPER_EXECUTABLE=./whisper/whisper.cpp/main
WHISPER_MODELS_DIR=./whisper/whisper.cpp/models

# Chunking Settings
CHUNK_DURATION=30
SILENCE_THRESHOLD=-40
MIN_SILENCE_DURATION=1.0

# Processing Settings
MAX_RETRIES=3
JOB_TIMEOUT=3600
CHUNK_TIMEOUT=300
MAX_CONCURRENT_JOBS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/stt.log

# Scheduler
SCHEDULER_TIMEZONE=Asia/Ho_Chi_Minh
