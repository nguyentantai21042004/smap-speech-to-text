# Application Settings
APP_NAME=SMAP Speech-to-Text
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=False

# API Service
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=1
MAX_UPLOAD_SIZE_MB=500

# MongoDB Configuratio n
MONGODB_URL=mongodb://172.16.19.100:27017
MONGODB_DATABASE=smap
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100
MONGODB_ROOT_USER=smap
MONGODB_ROOT_PASSWORD=hcmut2025

# RabbitMQ Configuration
RABBITMQ_HOST=172.16.19.112
RABBITMQ_PORT=5672
RABBITMQ_USER=smap
RABBITMQ_PASSWORD=hcmut
RABBITMQ_VHOST=/
RABBITMQ_QUEUE_NAME=stt_jobs_queue
RABBITMQ_EXCHANGE_NAME=stt_exchange
RABBITMQ_ROUTING_KEY=stt.job

# MinIO (Object Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123
MINIO_BUCKET=smap-stt-audio-files
MINIO_USE_SSL=False

# Storage (Temporary Processing)
TEMP_DIR=/tmp/stt_processing

# Whisper Settings
WHISPER_EXECUTABLE=./whisper/bin/whisper-cli
WHISPER_MODELS_DIR=./whisper/whisper.cpp/models
DEFAULT_WHISPER_MODEL=medium

# Chunking Settings
CHUNK_DURATION=30
SILENCE_THRESHOLD=-40
MIN_SILENCE_DURATION=1.0

# Processing Settings
MAX_RETRIES=3
JOB_TIMEOUT=3600
CHUNK_TIMEOUT=300
MAX_CONCURRENT_JOBS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/stt.log

# Scheduler
SCHEDULER_TIMEZONE=Asia/Ho_Chi_Minh
